<h1> <%= @band.name %> </h1>
<table>
  <tr>
    <th> Albums </th>
  </tr>
  <% @band.albums.each do |album| %>
    <tr>
      <td>
        <%= link_to "#{album.title}", album_url(album), method: :get %>
      </td>
    </tr>
  <% end %>
</table>
<br>
<form class="" action=" <%= new_album_url  %>" method="get">
  <input type="hidden" name="band_id" value=" <%= @band.id %>">
  <button>Add An Album</button>
</form>

<br>
<%= button_to "Edit Band", edit_band_url(@band), method: :get %>
<%= button_to "Delete Band", band_url(@band), method: :delete %>
<br>
<%= link_to "Return to Bands List", bands_url, method: :get %>
